{{#each errors}}
<div class="alert alert-danger mt-10">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <div class="form-group">
            <input type="hidden" name="_method" value="PUT">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" value="{{idea.title}}" required>
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class="form-control" name="details"  required>{{idea.details}}</textarea>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>